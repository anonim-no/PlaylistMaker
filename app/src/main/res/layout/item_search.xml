<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivTrackArt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/icon_image"
        android:layout_marginStart="12dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:lines="1"
            android:textColor="@color/search_results_track_name"
            android:textFontWeight="400"
            android:textSize="16sp"
            tools:text="Here Comes The Sun (Remastered)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:lines="1"
                android:textColor="@color/search_results_artist_name"
                android:textFontWeight="400"
                android:textSize="12sp"
                tools:text="The Beatles The Beatles The Beatles The Beatles The Beatles The Beatles The Beatles The Beatles " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:lines="1"
                android:textColor="@color/search_results_artist_name"
                android:textFontWeight="400"
                android:textSize="12sp"
                tools:text="  â€¢  " />
            <TextView
                android:id="@+id/tvTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:lines="1"
                android:textColor="@color/search_results_artist_name"
                android:textFontWeight="400"
                android:textSize="12sp"
                tools:text="05:05" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/moreImageViewButton"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginHorizontal="12dp"
        android:src="@drawable/icon_chevron_right"
        app:tint="@color/search_results_chevron" />


</LinearLayout>
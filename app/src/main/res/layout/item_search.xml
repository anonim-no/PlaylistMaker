<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivTrackArt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        tools:src="@drawable/icon_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTrackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:lines="1"
        android:textColor="@color/search_results_track_name"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/moreImageViewButton"
        app:layout_constraintStart_toEndOf="@id/ivTrackArt"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Here Comes The Sun (Remastered) feat long track name" />

    <TextView
        android:id="@+id/tvArtistNameTrackTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:lines="1"
        android:textColor="@color/search_results_artist_name"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/moreImageViewButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivTrackArt"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName"
        tools:text="The Beatles  â€¢  05:05" />

    <ImageView
        android:id="@+id/moreImageViewButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/icon_chevron_right"
        android:padding="6dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/search_results_chevron" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:gravity="top"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"

        android:text="@string/search"
        android:textAppearance="@style/button_text"
        android:textColor="@color/button_text_color"

        app:cornerRadius="16dp"
        app:icon="@drawable/icon_search"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/button_icon_color"

        android:foreground="?attr/selectableItemBackground"
        />

    <Button
        android:id="@+id/button_media_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffffff"

        android:text="@string/media_library"
        android:textColor="@color/button_text_color"
        android:textAppearance="@style/button_text"

        app:icon="@drawable/icon_media_library"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/button_icon_color"
        app:cornerRadius="16dp"

        android:foreground="?attr/selectableItemBackground"
        />
    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffffff"

        android:text="@string/settings"
        android:textColor="@color/button_text_color"
        android:textAppearance="@style/button_text"

        app:icon="@drawable/icon_settings"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/button_icon_color"
        app:cornerRadius="16dp"

        android:foreground="?attr/selectableItemBackground"
        />
</LinearLayout>
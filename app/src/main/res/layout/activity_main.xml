<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_from_start"
        android:layout_marginTop="@dimen/margin_from_top"
        android:gravity="top"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/header_text_size"
        />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_button_height"
        android:layout_marginStart="@dimen/margin_from_start"
        android:layout_marginEnd="@dimen/main_button_margin_end"
        android:layout_marginTop="@dimen/margin_from_header"
        android:backgroundTint="@color/main_button_background_color"
        android:layout_weight="1"

        android:text="@string/search"
        android:textAppearance="@style/main_button_text"
        android:textColor="@color/main_button_text_color"

        app:cornerRadius="@dimen/main_button_corner_radius"
        app:icon="@drawable/icon_search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_button_icon_padding"
        app:iconTint="@color/main_button_icon_color"

        android:foreground="?attr/selectableItemBackground"
        />

    <Button
        android:id="@+id/button_media_library"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_button_height"
        android:layout_marginStart="@dimen/margin_from_start"
        android:layout_marginEnd="@dimen/main_button_margin_end"
        android:layout_marginTop="@dimen/main_button_margin_from_button"
        android:backgroundTint="@color/main_button_background_color"
        android:layout_weight="1"

        android:text="@string/media_library"
        android:textColor="@color/main_button_text_color"
        android:textAppearance="@style/main_button_text"

        app:icon="@drawable/icon_media_library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_button_icon_padding"
        app:iconTint="@color/main_button_icon_color"
        app:cornerRadius="@dimen/main_button_corner_radius"

        android:foreground="?attr/selectableItemBackground"
        />
    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_button_height"
        android:layout_marginStart="@dimen/margin_from_start"
        android:layout_marginEnd="@dimen/main_button_margin_end"
        android:layout_marginTop="@dimen/main_button_margin_from_button"
        android:backgroundTint="@color/main_button_background_color"
        android:layout_weight="1"
        android:layout_marginBottom="28dp"

        android:text="@string/settings"
        android:textColor="@color/main_button_text_color"
        android:textAppearance="@style/main_button_text"

        app:icon="@drawable/icon_settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_button_icon_padding"
        app:iconTint="@color/main_button_icon_color"
        app:cornerRadius="@dimen/main_button_corner_radius"

        android:foreground="?attr/selectableItemBackground"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="android:backgroundTint">@color/main_button_background_color</item>

        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/main_button_icon_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>
    <style name="SettingsButtonText" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

        <item name="android:gravity">start</item>
        <item name="android:paddingTop">@dimen/settings_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/settings_button_padding_bottom</item>
        <item name="android:paddingHorizontal">@dimen/settings_button_padding_horizontal</item>

        <item name="iconGravity">end</item>
        <item name="iconTint">@color/settings_text_color</item>

        <item name="android:backgroundTint">@color/settings_button_background_color</item>

        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>